/********************************/
/*  Constant Registers          */
/********************************/
/****** Floats **********************************************************************************/
float4 c_ColShadow          : register(c0);   /* shadow color + shadow tex                      */

/********************************/
/*  Constant Registers          */
/********************************/
/****** Pixel Input *****************************************************************************/
struct PS_IN
{
    float4 pos              : POSITION;     /* vertex postion                                   */
};

/****** Pixel Output ****************************************************************************/
struct PS_OUT
{
    half4 col               : COLOR;        /* vertex postion                                   */
};

/********************************/
/*  Source                      */
/********************************/
/****** Main ************************************************************************************/
PS_OUT
main(PS_IN inpt)
{
    PS_OUT outp;

    outp.col = c_ColShadow;

    return outp;
}
